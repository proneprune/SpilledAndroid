<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set the solid color of the rectangle -->
    <solid android:color="@color/pink" /> <!-- Change the color code as needed -->

    <!-- Set the stroke (border) properties -->
    <stroke
        android:width="2dp"
        android:color="#000000" /> <!-- Border color code -->

    <!-- Set the corner radius of the rectangle -->
    <corners android:radius="8dp" /> <!-- Change the radius as needed -->

</shape>
